@model IEnumerable<Recomendations_app.Models.ReviewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReviewCategory)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AuthorGrade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReviewBody)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateOfCreationInUTC)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AuthorName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SearchVector)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReviewCategory)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AuthorGrade)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReviewBody)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateOfCreationInUTC)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AuthorName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SearchVector)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
